{
    "title" : "Routes configuration schema",
    "$schema" : "http://json-schema.org/draft-04/schema#",
    "description": "The configuration object schema validation for routes configuration.",
    "type" : "object",
    "required" : true,
    "patternProperties": {
        "^(GET|POST|DELETE)\\s\\|\\s.*": {
            "type" : "string",
            "required" : true
        }
    }
}